body
	font-family: Tahoma
	font-weight: bold

.container 
	min-width: 600px
	font-size: 11px


// Стили шапки сайта

.logo
	background-image url('../img/logo.png')
	width 182px
	height 243px
	float: left
	z-index: 3
	position: absolute
	
.menu 
	margin-top: 20px
	font-family: Tahoma
	font-weight: bold
	font-size: 11px
	margin-bottom:0

.menu li 
	list-style-type:none
	float:left
	background-color: #c6c7c7
	padding: 10px 10px 10px 10px
	margin-left: 5px
	border-radius: 5px 5px 0 0
	cursor:pointer
	
.menu li:hover
	transition:1s
	-webkit-transition:0.3s
	-moz-transition:0.3s
	-o-transition:0.3s
	padding-bottom:20px
	margin-top:-10px

.menu li.selected
	background-color #99cff6
	
.company-name 
	width: 210px
	height: 45
	background: #fff
	position: absolute
	z-index: 5
	margin: 120px 0 0 0
	border-radius: 0px 10px 10px 0px
	box-shadow: 0 10px 10px rgba(0, 0, 0, 0.84)

.company-name h4
	margin-top: 5px
	font-family: Tahoma
	font-weight: bold
	font-size:20px
	margin-left:30px

.company-name p
	margin-top: -10px
	font-family: Tahoma
	font-weight: bold
	font-size: 10px
	margin-left: 30px
	color: #666666
	
.colortext
	color:#ff9900
	
.cart 
	width: 160px
	height: 15
	background: #fff
	position: absolute
	z-index: 5
	float: right
	margin: 57px 0 0 291px
	border-radius: 10px 0px 0px 10px
	box-shadow: 0 10px 10px rgba(0,0,0,0.84)
.cart p 
	float:left
	color:#cc0000
	font-size:9px
	margin-left:10px
	margin-top:1px
	
.film-slider
	height: 140px
	width: 10000px
	
.slider
	// margin: 50px auto;
	width: 100%
	height: 140px
	background: #a2a4a4
	overflow: hidden;

.slider-item
	float: left
	background-image url('../img/film.png')
	height: 140px
	width:154px

.slider-item img
	margin:23px 0px 0px 6px
	
// Стили контента сайта
	
.content
	margin-top: 35px
	
.content-title 
	padding: 23px 0px 0px 20px
	font-size:12px
	
.news-title p
	display: inline-block
	font-size: 9px
	
.news-name 
	color: #cc3333
	font-size: 12px

.news-block 
	padding: 0 20px 0px 20px;
	    
.news-date
	float:right
	font-size:12px
	
.lorem-ipsum
	background: #f0f0f0
	border-radius: 20px 20px 0 0
	
.lorem-content
	padding: 0 20px 0px 20px;
	
.lorem-content ul
	font-size: 10px
	color: #ff9900
	list-style-type:none
	margin-left: -40px;
	padding-bottom: 40px;
	
.description-title
	padding: 15px 0px 0px 20px
	font-size:16px
	    
.description-title p
	    float: left;
.second
	font-size:12px
	color:#ff9900
	margin: 5px 0px 0px 10px;
	
// Стили подввла

.footer-menu 
	text-align:center

.footer-menu p
	display: inline-block
	margin-left: 20px
	cursor:pointer
	font-size:9px

.copyright 
	font-size:9px
	text-align: center
.footer 
	width: 100%
	height: 40px
	background-image url('../img/footer-bg.png')
	color: #fff
	font-size:9px
.news-content 
	font-size:9px
	overflow:hidden
